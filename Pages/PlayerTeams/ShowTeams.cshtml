@page
@model EgetTest03.Pages.PlayerTeams.ShowTeamsModel
@{
    ViewData["Title"] = "ShowTeams";
}

<h1>Select Team</h1>

<hr>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Player</label>
        <select asp-for="Tid" class="form-control"
                asp-items="@(new SelectList(Model.Teams, "Id", "Name"))">
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
</form>
