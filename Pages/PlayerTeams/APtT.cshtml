@page
@model EgetTest03.Pages.PlayerTeams.APtTModel
@{
    ViewData["Title"] = "APtT";
}

<h1>Add Player to a Team</h1>

<div class="row">
    <div class="col-md-4">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.Label("Players already in the Team")
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (!(Model.PiT == null))
                {
                    @foreach (var item in Model.PiT)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="Tid" value="TeamId">
            <div class="form-group">
                <label class="control-label">Player</label>
                <select asp-for="PTTId" class="form-control"
                        asp-items="@( new SelectList(Model.Players, "Id", "Name"))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>